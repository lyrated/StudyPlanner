<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studyplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.topics.EditTopicActivity"
            android:label="@string/add_topic">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.topics.TopicsActivity" />
        </activity>
        <activity android:name=".gui.studypartner.StudyPartnerActivity" />
        <activity android:name=".gui.studypartner.StudyPartnerInitialActivity" />
        <activity
            android:name=".gui.subjects.EditSubjectActivity"
            android:label="@string/add_subject">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.subjects.SubjectsActivity" />
        </activity>
        <activity
            android:name=".gui.subjects.SubjectsActivity"
            android:label="@string/all_subjects">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.topics.TopicsActivity" />
        </activity>
        <activity
            android:name=".gui.topics.TopicsActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>